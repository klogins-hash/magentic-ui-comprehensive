# Magentic-UI Environment Configuration

# =============================================================================
# Core Application Settings
# =============================================================================
MAGENTIC_UI_HOST=0.0.0.0
MAGENTIC_UI_PORT=8081
MAGENTIC_UI_DEBUG=false
MAGENTIC_UI_LOG_LEVEL=INFO

# =============================================================================
# AI/LLM Configuration
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-2024-08-06

# Groq Configuration (for voice system)
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MODEL=llama-3.3-70b-versatile

# Daily.co Configuration (for WebRTC voice)
DAILY_API_KEY=your_daily_api_key_here
DAILY_ROOM_URL=https://your-domain.daily.co/your-room

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL
DATABASE_URL=postgresql://magentic:password@postgres:5432/magentic_ui
POSTGRES_USER=magentic
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=magentic_ui
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Valkey/Redis Cache
VALKEY_URL=redis://valkey:6379/0
VALKEY_HOST=valkey
VALKEY_PORT=6379
VALKEY_DB=0

# =============================================================================
# Voice System Configuration
# =============================================================================
VOICE_BACKEND_HOST=0.0.0.0
VOICE_BACKEND_PORT=8765
VOICE_BACKEND_DEBUG=false

# Pipecat Configuration
PIPECAT_LOG_LEVEL=INFO
PIPECAT_AUDIO_FORMAT=wav
PIPECAT_SAMPLE_RATE=16000

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3000
FRONTEND_API_URL=http://localhost:8081
FRONTEND_WS_URL=ws://localhost:8765

# =============================================================================
# Docker Configuration
# =============================================================================
COMPOSE_PROJECT_NAME=magentic-ui
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your_secret_key_change_me_in_production
JWT_SECRET=your_jwt_secret_change_me
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# Monitoring & Observability
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Development Settings
# =============================================================================
DEV_MODE=false
HOT_RELOAD=false
DEBUG_TOOLBAR=false
