# Voice Backend Environment Configuration

# =============================================================================
# Groq API Configuration
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1

# Speech-to-Text Model
GROQ_STT_MODEL=whisper-large-v3

# Language Model
GROQ_LLM_MODEL=llama-3.1-70b-versatile

# Text-to-Speech Model  
GROQ_TTS_MODEL=tts-1

# =============================================================================
# WebSocket Configuration
# =============================================================================
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765
WEBSOCKET_MAX_CONNECTIONS=100

# =============================================================================
# Magentic-UI Integration
# =============================================================================
MAGENTIC_UI_URL=http://magentic-core:8081
MAGENTIC_UI_API_KEY=optional_api_key

# =============================================================================
# Audio Configuration
# =============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_FORMAT=wav
AUDIO_CHUNK_SIZE=1024

# =============================================================================
# Pipecat Configuration
# =============================================================================
PIPECAT_LOG_LEVEL=INFO
PIPECAT_DEBUG=false
PIPECAT_METRICS_ENABLED=true

# =============================================================================
# Performance Settings
# =============================================================================
MAX_AUDIO_DURATION=30
RESPONSE_TIMEOUT=10
CONNECTION_TIMEOUT=5

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
ENABLE_CORS=true
