# Voice Backend Environment Configuration

# =============================================================================
# Required API Keys
# =============================================================================
GROQ_API_KEY=your_groq_api_key_here
DAILY_API_KEY=your_daily_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Groq Configuration
# =============================================================================
GROQ_STT_MODEL=whisper-large-v3
GROQ_LLM_MODEL=llama-3.3-70b-versatile
GROQ_TTS_VOICE=alloy

# =============================================================================
# Daily.co Configuration (for WebRTC)
# =============================================================================
DAILY_ROOM_URL=https://your-domain.daily.co/your-room-name
DAILY_BOT_NAME=Magentic Voice Bot

# =============================================================================
# Magentic-UI Integration
# =============================================================================
AUTOGEN_BASE_URL=http://magentic-core:8081
MAGENTIC_UI_API_KEY=optional_api_key

# =============================================================================
# Pipecat Configuration
# =============================================================================
PIPECAT_LOG_LEVEL=INFO
PIPECAT_ENABLE_METRICS=true
PIPECAT_ENABLE_USAGE_METRICS=true

# =============================================================================
# WebSocket Fallback Configuration
# =============================================================================
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=8765

# =============================================================================
# Audio Processing
# =============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
VAD_ENABLED=true

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1
