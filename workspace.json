{
  "name": "magentic-ui-monorepo",
  "version": "1.0.0",
  "description": "Multi-agent business system monorepo",
  "workspaces": {
    "packages": [
      "src/magentic_ui",
      "frontend",
      "ios-app",
      "voice-backend",
      "web-frontend",
      "experiments/*"
    ]
  },
  "scripts": {
    "build": "pnpm run build --recursive",
    "test": "pnpm run test --recursive",
    "lint": "pnpm run lint --recursive",
    "dev": "pnpm run dev --recursive --parallel"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "turbo": "^1.10.0"
  }
}
